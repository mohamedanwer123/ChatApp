<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#180949"
    tools:context="com.example.cm.chatapp.Fragments.Share">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#fff"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/des"
        android:id="@+id/share_fragment_textview_post"
        android:text="@string/hello_blank_fragment" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:backgroundTint="#610a53"
            android:src="@drawable/share"
            android:id="@+id/share_fragment_button_share"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>
